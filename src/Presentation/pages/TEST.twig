{% extends "layouts/base.twig" %}

{% block content %}
<h1>SSE Stream Test</h1>
<div id="messages"></div>

<script>
    const messagesDiv = document.getElementById('messages');
    const clientId = Math.random().toString(36).substr(2, 9);
    let eventSource;

    function connect() {
        console.log('üîå Connecting to SSE stream...');
        eventSource = new EventSource(`/stream?clientId=${clientId}`);

        eventSource.onopen = () => {
            console.log('‚úÖ Connected to SSE stream');
            messagesDiv.innerHTML += `<p style="color: green">Connected as: ${clientId}</p>`;
        };

        eventSource.onmessage = (event) => {
            try {
                const data = JSON.parse(event.data);
                console.log('üì® Message:', data);
                messagesDiv.innerHTML += `<p>${JSON.stringify(data)}</p>`;
            } catch (e) {
                console.error('Parse error:', e, event.data);
            }
        };

        eventSource.addEventListener('connected', (event) => {
            const data = JSON.parse(event.data);
            console.log('üîó Connected event:', data);
        });

        eventSource.addEventListener('error', (event) => {
            if (event.data) {
                try {
                    const data = JSON.parse(event.data);
                    console.error('‚ùå SSE Application Error:', data.message);
                    messagesDiv.innerHTML += `<p style="color: red">Error: ${data.message}</p>`;
                } catch (e) {
                    console.error('‚ùå SSE Error (non-json):', event);
                }
            } else if (eventSource.readyState === EventSource.CLOSED) {
                console.error('‚ùå SSE connection closed');
                messagesDiv.innerHTML += `<p style="color: orange">Connection closed. Retrying...</p>`;
            } else if (eventSource.readyState === EventSource.CONNECTING) {
                console.warn('‚ö†Ô∏è SSE reconnecting...');
            }
        });
    }

    connect();
</script>

<button onclick="publishTest()">Send Test Message</button>
{% endblock %}